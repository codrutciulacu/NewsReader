<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.codrut.newsreader.feature.articledetails.model.ArticleDetailsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.articledetails.fragment.ArticleDetailsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/article_details_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="@string/article_image_content_description"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                app:imageUrl="@{viewModel.itemViewModel.pictureUrl}"
                app:placeholder="@{viewModel.itemViewModel.placeholder}" />

            <TextView
                android:id="@+id/article_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="@{viewModel.itemViewModel.title}"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:text="@string/article_title_placeholder" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@{viewModel.itemViewModel.content}"
                tools:text="@string/article_content_placeholder" />
        </LinearLayout>
    </ScrollView>
</layout>